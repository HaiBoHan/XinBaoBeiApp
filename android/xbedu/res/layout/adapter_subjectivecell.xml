<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/iv_subjectivelist_item_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/list_item_subjective_1" 
        android:layout_centerVertical="true"/>
    <TextView 
        android:id="@+id/tv_titlecontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="专家问题"
        android:textStyle="bold"
        android:textColor="#00eced"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iv_subjectivelist_item_icon"
        android:layout_centerVertical="true"/>
    <View 
        android:id="@+id/iv_bgline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_titlecontent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="#dfdfdf"/>
</RelativeLayout>
